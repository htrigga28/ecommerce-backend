{
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "typeAcquisition": {
    "include": ["jest"]
  }
}
